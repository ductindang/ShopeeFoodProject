@using BusinessLogicLayerFront.DTOs
@using Newtonsoft.Json
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.unobtrusive-ajax/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        footer a {
            text-decoration: none;
        }

        .bi-facebook:hover {
            color: blue;
        }

        .bi-instagram:hover {
            color: purple;
        }

        .content {
            flex: 1;
        }

        .category-list {
            overflow-x: auto;
            white-space: nowrap;
        }

            .category-list .nav-item {
                display: inline-block;
                white-space: normal;
            }

        .selected-category {
            border: 2px solid red;
        }

        .hidden {
            display: none;
        }

        .active {
            font-weight: bold;
            color: red;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img style="width: 100px" src="https://shopeefood.vn/app/assets/img/shopeefoodvn.png?4aa1a38e8da801f4029b80734905f3f7" alt="Shopee Food" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: space-between;">
                    <ul class="navbar-nav mr-auto category-list">
                        <li class="nav-item">
                            <select class="nav-link text-dark">
                                <option>TP.HCM</option>
                                <option>Ha Noi</option>
                                <option>Da Nang</option>
                                <option>DakLak</option>
                                <option>Gia Lai</option>
                            </select>
                        </li>
                        @{
                            var cateSessionJson = Context.Session.GetString("cateSession");
                            if (!string.IsNullOrEmpty(cateSessionJson))
                            {
                                var cateSession = JsonConvert.DeserializeObject<List<CategoryDto>>(cateSessionJson);
                                @for (var index = 0; index < cateSession.Count; index++)
                                {
                                    <li id="item-@index" class="nav-link text-dark category-link" onclick="handleItemClick(@index)">
                                        @cateSession[index].Name
                                    </li>
                                }
                                // foreach (var cate in cateSession)
                                // {
                                //     <li class="nav-item">
                                //         <a class="nav-link text-dark category-link" id="item-@cate.Id" asp-area="" onclick="handleItemClick(@cate.Id)">@cate.Name</a>
                                //     </li>
                                // }
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ">
                        @{
                            var userCheckJson = Context.Session.GetString("userCheck");
                            if (!string.IsNullOrEmpty(userCheckJson))
                            {
                                var userCheck = JsonConvert.DeserializeObject<UserDto>(userCheckJson);
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Welcome, @userCheck.FullName!</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="login nav-link text-danger" asp-controller="User" asp-action="Login">Login</a>
                                </li>
                            }
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="" style="height: auto; overflow:auto; margin-top: 60px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center text-lg-start" style="background-color: lightgray; margin-bottom: -50px">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Company</h5>
                    <ul class="list-unstyled mb-0">
                        <li><a href="#" class="text-dark">About us</a></li>
                        <li><a href="#" class="text-dark">Help center</a></li>
                        <li><a href="#" class="text-dark">Term and condition</a></li>
                        <li><a href="#" class="text-dark">Terms of service</a></li>
                        <li><a href="#" class="text-dark">Information security</a></li>
                        <li><a href="#" class="text-dark">Adjustmation of claims</a></li>
                        <li><a href="#" class="text-dark">Contact us</a></li>
                        <li><a href="#" class="text-dark">Partner</a></li>
                        <li><a href="#" class="text-dark">Shopee Blog</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">ShopeeFood App</h5>
                    <ul class="list-unstyled">
                        <li><a href="#"><img style="width: 140px" src="~/image/logoappstore.png" /></a></li>
                        <li><a href="#"><img style="width: 140px; margin: 20px 0;" src="~/image/logoggplay.jpg" /></a></li>
                        <li><a href="#"><img style="width: 140px" src="https://www.sanlamreality.co.za/wp-content/uploads/2022/10/App-gallery-icon_999999x200_8.png" /></a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <img style="width: 140px" src="https://shopeefood.vn/app/assets/img/Logo-ShopeefoodVN.png?a233b36c37415f85f46c25a6cd0963aa" />
                    <p>© 2024 ShopeeFood</p>
                    <div style="display: flex; gap: 20px; justify-content: center">
                        <a style="color: gray; font-size: 30px" href="https://www.facebook.com/shopeefoodvn" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a style="color: gray; font-size: 30px" href="https://www.instagram.com/shopeefood_vn/" title="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Company</h5>
                    <p>
                        Công Ty Cổ Phần Foody<br />
                        Lầu G, Tòa nhà Jabes 1,<br />
                        số 244 đường Cống Quỳnh, phường Phạm Ngũ Lão, Quận 1, TPHCM<br />
                        Giấy CN ĐKDN số: 0311828036<br />
                        do Sở Kế hoạch và Đầu tư TP.HCM cấp ngày 11/6/2012,<br />
                        sửa đổi lần thứ 23, ngày 10/12/2020<br />
                        Chịu trách nhiệm quản lý nội dung: Nguyễn Hồ Quảng Giang<br />
                        Điện thoại liên hệ: 028 71096879<br />
                        Email: <a href="#">support@shopeefood.vn</a><br />
                        <img style="width: 100px" src="https://shopeefood.vn/app/assets/img/gov_seals1.jpg?4534b28245a7aad9805fbddc90f873d8" />
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    function handleItemClick(index) {
        // Remove 'active' class from all items
        $('li').removeClass('active');

        // Add 'active' class to the clicked item
        $('#item-' + index).addClass('active');

        $.ajax({
            type: 'GET',
            url: '@Url.Action("Privacy", "Home")',
            success: function (response) {
                window.location.href = "https://localhost:7059/home/privacy";
            }
        });
    }
</script>
