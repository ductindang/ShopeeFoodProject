@model IEnumerable<BusinessLogicLayerFront.DTOs.UserAddressDetailDto>
@* @model BusinessLogicLayerFront.DTOs.UserDto *@
@using BusinessLogicLayerFront.DTOs
@using Newtonsoft.Json

@{
    Layout = null;
}
<link href="~/css/orderinfo.css" rel="stylesheet" />


<div class="panel-header">
    <strong class="panel-title">Update Address</strong>
</div>

<table class="panel-table">
    <thead >
        <tr>
            <th class="column-full-name">Name reminiscent</th>
            <th class="column-address">Address</th>
            <th class="column-phone">Phone</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null || Model.Any())
        {
            @foreach (var userAddress in Model)
            {
                <tr>
                    <td>@userAddress.NameReminiscent</td>
                    <td>@userAddress.StreetName, @userAddress.WardName, @userAddress.DistrictName, @userAddress.ProvinceName</td>
                    <td>@userAddress.PhoneNumber</td>
                </tr>
            }
        }
        
    </tbody>
</table>

<div>
    <button id="adding-address" style="float: right; margin: 20px; padding: 5px; width: 120px; background-color: #ee4d2d; border: none; color: white; text-transform: uppercase; border-radius: 5px">Add</button>
</div>


<!-- Modal for Checkout -->
<div id="address-modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); justify-content: center; align-items: center; z-index: 1000;">
    <div style="background: white; padding: 20px; border-radius: 5px; max-width: 800px; width: 100%; max-height: 80%; overflow-y: auto;">
        <div id="address-content">
            <!-- Address and order summary will be loaded here -->
        </div>
        
    </div>
</div>
<div id="overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3); z-index: 999;"></div>


<script src="~/js/orderinfo.js" asp-append-version="true"></script>